<div id="sid-{{ section.id }}">
  <div class="main_container">
    <div class="content_wrapper">
      <h2 class="section_heading">{{ section.settings.section_heading }}</h2>
      <div class="grid_container">
        <div class="link_container">
          {% for block in section.blocks %}
            {% assign page = block.settings.page %}
            <a class="link_box" href="{{ page.url }}" data-image="{{ page.title }}">
              {{ page.title }}
              {% if section.settings.links_arrow != blank %}
                <img src="{{ section.settings.links_arrow | image_url }}" width="100%" height="100%" loading="lazy">
              {% else %}
                <img
                  src="https://cdn.shopify.com/s/files/1/0929/7156/5345/files/right-arrow_2.png?v=1756881194"
                  width="100%"
                  height="100%"
                  loading="lazy"
                >
              {% endif %}
            </a>
          {% endfor %}
        </div>
        <div class="images_container">
          {% for block in section.blocks %}
            {% assign page = block.settings.page %}
            <div class="image_wrapper" data-image="{{ page.title }}">
              {% if page.metafields.custom.solution_image != blank %}
                <img
                  src="{{ page.metafields.custom.solution_image | image_url }}"
                  width="100%"
                  height="100%"
                  loading="lazy"
                >
              {% elsif block.settings.page_image != blank %}
                <img src="{{ block.settings.page_image | image_url }}" width="100%" height="100%" loading="lazy">
              {% else %}
                <img
                  src="https://cdn.shopify.com/s/files/1/0929/7156/5345/files/solution_image.png?v=1756880193"
                  width="100%"
                  height="100%"
                  loading="lazy"
                >
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const linkBoxes = document.querySelectorAll('.link_box');
    const imageWrappers = document.querySelectorAll('.image_wrapper');

    linkBoxes.forEach((linkBox) => {
      linkBox.addEventListener('mouseenter', (e) => {
        const targetImage = linkBox.dataset.image;

        linkBoxes.forEach((box) => {
          box.style.background = 'transparent';
          box.style.color = '{{ section.settings.page_link_color }}';
          box.querySelector('img').style.filter = "invert(0)";
        });
        linkBox.style.background = '#1079cbe6';
        linkBox.style.color = '#ffffff';
        linkBox.querySelector('img').style.filter = "invert(1)";

        imageWrappers.forEach((image) => {
          if (image.dataset.image === targetImage) {
            image.style.opacity = '1';
            image.style.visibility = 'visible';
          } else {
            image.style.opacity = '0';
            image.style.visibility = 'hidden';
          }
        });
      });
    });
  });
</script>

